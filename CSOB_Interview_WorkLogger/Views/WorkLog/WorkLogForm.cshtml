@model CSOB_Interview_WorkLogger.Models.WorkLogViewModel

@{
    ViewBag.Title = ViewBag.Title ?? "Work Log";
}

<h2>@ViewBag.Title</h2>

<form asp-action="@ViewBag.Action" method="post">
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="Model.EmployeeSelectList"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Created" class="control-label"></label>
        <input asp-for="Created" class="form-control" type="date"  />
        <span asp-validation-for="Created" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="0">Started</option>
            <option value="1">Finished</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}